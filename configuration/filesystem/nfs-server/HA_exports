# Trinity NFS exports
$(flag_is_set NFS_EXPORT_LOCAL || echo \#)${STDCFG_TRIX_LOCAL}|-rw,sync,no_wdelay,no_root_squash $TRIX_CTRL{1,2,}_HOSTNAME
$(flag_is_set NFS_EXPORT_IMAGES || echo \#)${STDCFG_TRIX_IMAGES}|-rw,async,no_root_squash $TRIX_CTRL{1,2,}_HOSTNAME
$(flag_is_set NFS_EXPORT_SHARED || echo \#)${STDCFG_TRIX_SHARED}|-rw,sync,no_wdelay,no_root_squash $TRIX_CTRL{1,2,}_HOSTNAME *(ro)
$(flag_is_set NFS_EXPORT_HOME || echo \#)${STDCFG_TRIX_HOME}|*(rw,async,no_root_squash)
